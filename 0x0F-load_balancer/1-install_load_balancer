1 #!/usr/bin/env bash
  2 sudo apt-get update
  1 #!/usr/bin/env bash
  2 sudo apt-get -y update
  3 apt-get -y install haproxy
  4
  5 # edit config file
  6 server_config=\
  7 "
  8 frontend  offering-frontend
  9         bind *:80
 10         mode http
 11         default_backend offering-backend
 12 backend offering-backend
 13         balance roundrobin
        server 175278-web-01 52.5.50.233:80 check
        server 175278-web-02 34.207.63.235:80 check
"
echo "$server_config" | sudo tee -a /etc/haproxy/haproxy.cfg

# enable haproxy to be started by init script

echo "ENABLED=1" | sudo tee -a /etc/default/haproxy

sudo service haproxy restart
